    "related_applications": [
        {
            "platform": "webapp",
            "url": "https://yourwebsite.com"
        }
    ],
    "prefer_related_applications": false,
    "edge_side_panel": {
        "preferred_width": 400
    },
    "launch_handler": {
        "client_mode": "navigate-existing"
    },
    "protocol_handlers": [
        {
            "protocol": "web+cloudflow",
            "url": "/handle?url=%s"
        }
    ],
    "file_handlers": [
        {
            "action": "/handle-file",
            "accept": {
                "text/csv": [
                    ".csv"
                ],
                "application/json": [
                    ".json"
                ]
            }
        }
    ],
    "share_target": {
        "action": "/share",
        "method": "POST",
        "enctype": "multipart/form-data",
        "params": {
            "title": "title",
            "text": "text",
            "url": "url",
            "files": [
                {
                    "name": "files",
                    "accept": [
                        "image/*",
                        "text/*",
                        "application/pdf"
                    ]
                }
            ]
        }
    }
}